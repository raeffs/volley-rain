@model IList<AttendanceType>

@{
    ViewBag.Title = "Anwesenheits-Typen";
}

<h2>Anwesenheits-Typen</h2>

@using (Html.BeginForm())
{
    <div class="pager">
        <input type="submit" value="Speichern" class="btn btn-default btn-success" />
    </div>
    
    <table class="table table-condensed">
        <thead>
            <tr>
                <th class="hidden"></th>
                <th>@Html.DisplayNameFor(model => Model[0].ShortName)</th>
                <th>@Html.DisplayNameFor(model => Model[0].Name)</th>
                <th>@Html.DisplayNameFor(model => Model[0].RepresentsAttendance)</th>
                <th>@Html.DisplayNameFor(model => Model[0].ColorCode)</th>
            </tr>
        </thead>
        @for (int i = 0; i < Model.Count(); i++) { 
            <tr>
                <td class="hidden">@Html.HiddenFor(model => Model[i].ID)</td>
                <td>@Html.DisplayFor(model => Model[i].ShortName)</td>
                <td>@Html.DisplayFor(model => Model[i].Name)</td>
                <td>@Html.DisplayFor(model => Model[i].RepresentsAttendance)</td>
                <td>@Html.TextBoxFor(model => Model[i].ColorCode, new { @class = "form-control" })</td>
            </tr>
        }
    </table>
}