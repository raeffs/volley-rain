@model Log

@{
    ViewBag.Title = "Log Details";
}

<h2>Log Details <small>@Html.DisplayNameFor(model => Model.ID) @Html.DisplayFor(model => Model.ID)</small></h2>

<div class="form-horizontal">

    <div class="form-group">
        <div class="col-sm-2">
            <b>@Html.DisplayNameFor(model => model.TimeStamp)</b>
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.TimeStamp)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2">
            <b>@Html.DisplayNameFor(model => model.Level)</b>
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2">
            <b>@Html.DisplayNameFor(model => model.SessionID)</b>
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.SessionID)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2">
            <b>@Html.DisplayNameFor(model => model.UserIdentity)</b>
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.UserIdentity)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2">
            <b>@Html.DisplayNameFor(model => model.Logger)</b>
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Logger)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2">
            <b>@Html.DisplayNameFor(model => model.Message)</b>
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="@Url.Action("Index")" class="btn btn-default btn-warning btn-responsive">Zurück</a>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Exception))
    { 
        <div class="form-group">
            <div class="col-sm-12">
                <b>@Html.DisplayNameFor(model => model.Exception)</b>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12" style="white-space:pre-line">
                @Html.DisplayFor(model => model.Exception)
            </div>
        </div>
    }

</div>