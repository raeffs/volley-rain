@model EventTypeCreation

@{
    ViewBag.Title = "Event-Typ erstellen";
}

<h2>Event-Typ erstellen</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-sm-2 hidden-xs" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Name) })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShortName, new { @class = "control-label col-sm-2 hidden-xs" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.ShortName, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.ShortName) })
                @Html.ValidationMessageFor(model => model.ShortName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ColorCode, new { @class = "control-label col-sm-2 hidden-xs" })
            <div class="col-sm-10">
                @Html.ColorInputFor(model => model.ColorCode, new { @class = "color-picker" })
                @Html.ValidationMessageFor(model => model.ColorCode)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Speichern" class="btn btn-default btn-success btn-responsive" />
            </div>
        </div>
    </div>
}

<script>
    $(".color-picker").spectrum({
        preferredFormat: "hex",
        showInitial: true
    });
</script>